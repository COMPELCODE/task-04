html,body,.wrapper
    width: 100%
    height: 100%
.wrapper
    background-color: #eff0f4
    .header
        height: 4.5rem
        padding: 0 1.6rem
        line-height: 4.5rem
        text-align: center
        background-color: #5fc0cd
        .close-btn,
        .reg-btn
            font-size: 1.6rem
            color: #fff
            text-decoration:none
        .close-btn
            float: left
        .reg-btn
            float: right
        .login-text
            font-size: 1.8rem
            color: #fff
    .main
        .input-wrapper
            overflow: hidden
            .input-item
                width: 100%
                height: 5.1rem
                --input-height: 5.1rem
                display: flex
                margin-top: .8rem
                background-color: #fff
                & .phone-icon
                    background: url("../images/iphone.png") no-repeat
                & .key-icon
                    background: url("../images/locked.png") no-repeat
                & .phone-icon,
                & .key-icon
                    width: 14px
                    height: 21px
                    background-size: cover
                    margin: 1.5rem 2.4rem 1.5rem 2.2rem
                & .line
                    width: 2px
                    height: 2.6rem
                    --line-height: 2.6rem
                    background-color: #eaedee
                    margin-top: calc((var(--input-height) - var(--line-height)) / 2)
                & .input-phone,
                & .input-pw
                    width: 100%
                    height: 100%
                    flex: 1
                    margin-left: 2.4rem
                    font-size: 1.6rem
                    color: #444
                    outline: none
        .submit
            width: 100%
            height: 5rem
            line-height: 5rem
            margin-top: 3.5rem
            color: #f3f4f6
            background-color: #5fc0cd
            font-size: 1.8rem
            outline: none
            border: none
            cursor: not-allowed
    .forgetPw
        padding: 0 1.6rem
        margin-top: 1.6rem
        font-size: 1.6rem
        text-align: right
        a
            color: #5fc0cd
